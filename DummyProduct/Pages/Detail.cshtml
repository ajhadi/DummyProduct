@page
@model DummyProduct.Pages.DetailModel

@{
    ViewData["Title"] = "Product Detail";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">

            @foreach (var image in Model.ProductViewModel.Product.Images)
            {
                <div style="position:relative;overflow:hidden;padding-bottom:100%;">
                    <img src="@image" style="position:absolute" class="card-img-top img-fluid img-square">
                </div>
            }

        </div>
        <div class="col-md-7">
            <h2>@Model.ProductViewModel.Product.Title</h2>
            <p class="text-muted">@Model.ProductViewModel.Product.Category</p>
            <p>@Model.ProductViewModel.Product.Description</p>
            <p><strong>Price:</strong> $@Model.ProductViewModel.Product.Price</p>
            <p><strong>Discount:</strong> @Model.ProductViewModel.Product.DiscountPercentage%</p>
            <p><strong>Rating:</strong> @Model.ProductViewModel.Product.Rating</p>
            <form method="post" asp-page-handler="Buy" asp-route-id="@Model.ProductViewModel.Product.Id">
                <button type="submit" class="btn btn-primary">Buy</button>
            </form>
        </div>
    </div>
</div>